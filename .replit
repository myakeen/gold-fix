modules = ["rust"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FIX Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build FIX Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Examples"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Test"

[[workflows.workflow]]
name = "FIX Engine"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build"

[[workflows.workflow]]
name = "Build FIX Engine"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build --all"

[[workflows.workflow]]
name = "Build Examples"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo build --examples"

[[workflows.workflow]]
name = "Build and Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cargo test --all"

[deployment]
run = ["sh", "-c", "cargo build --all"]
